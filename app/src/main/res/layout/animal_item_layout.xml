<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/animal_image"
        android:layout_width="109dp"
        android:layout_height="116dp"
        android:layout_marginStart="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/profile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/animal_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ime životinje"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/animal_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />

    <TextView
        android:id="@+id/animal_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tip životinje"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/animal_name"
        app:layout_constraintStart_toStartOf="@id/animal_name"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/animal_age"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Dob: 5 godina"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/animal_type"
        app:layout_constraintStart_toStartOf="@id/animal_type"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/animal_color"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Boja: Crna"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/animal_age"
        app:layout_constraintStart_toStartOf="@id/animal_age"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
